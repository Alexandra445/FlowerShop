<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>FlowerShop Server</display-name>
    <description>Сервер для клиентско-серверного приложения цветочного магазина</description>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <!-- Сервлет для работы с цветами -->
    <servlet>
        <servlet-name>FlowerServlet</servlet-name>
        <servlet-class>server.FlowerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FlowerServlet</servlet-name>
        <url-pattern>/flowers</url-pattern>
    </servlet-mapping>

    <!-- Сервлет для работы с букетами -->
    <servlet>
        <servlet-name>BouquetServlet</servlet-name>
        <servlet-class>server.BouquetServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BouquetServlet</servlet-name>
        <url-pattern>/bouquets</url-pattern>
    </servlet-mapping>

    <!-- Сервлет для работы с заказами -->
    <servlet>
        <servlet-name>OrderServlet</servlet-name>
        <servlet-class>server.OrderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OrderServlet</servlet-name>
        <url-pattern>/orders</url-pattern>
    </servlet-mapping>

    <!-- Сервлет для работы с клиентами -->
    <servlet>
        <servlet-name>ClientServlet</servlet-name>
        <servlet-class>server.ClientServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ClientServlet</servlet-name>
        <url-pattern>/clients</url-pattern>
    </servlet-mapping>

    <!-- Сервлет для работы с администраторами -->
    <servlet>
        <servlet-name>AdminServlet</servlet-name>
        <servlet-class>server.AdminServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminServlet</servlet-name>
        <url-pattern>/admins</url-pattern>
    </servlet-mapping>

    <!-- Сервлет для авторизации -->
    <servlet>
        <servlet-name>AuthServlet</servlet-name>
        <servlet-class>server.AuthServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AuthServlet</servlet-name>
        <url-pattern>/auth</url-pattern>
    </servlet-mapping>

    <!-- Сервлет для работы со статусами заказов -->
    <servlet>
        <servlet-name>OrderStatusServlet</servlet-name>
        <servlet-class>server.OrderStatusServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OrderStatusServlet</servlet-name>
        <url-pattern>/order-statuses</url-pattern>
    </servlet-mapping>

</web-app>

